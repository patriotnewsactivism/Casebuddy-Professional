# CaseBuddy Professional - Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
PORT=5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For local development with PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/casebuddy

# For Google Cloud SQL (using Cloud SQL Auth Proxy)
# DATABASE_URL=postgresql://username:password@localhost:5432/casebuddy?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# For Cloud SQL with private IP (within VPC)
# DATABASE_URL=postgresql://username:password@PRIVATE_IP:5432/casebuddy

# ============================================
# GOOGLE CLOUD / FIREBASE CONFIGURATION
# ============================================
# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Google Generative AI API Key (for Gemini)
GOOGLE_GENAI_API_KEY=your-gemini-api-key

# Firebase Service Account (for Firebase Admin SDK, if using Firebase services)
# FIREBASE_SERVICE_ACCOUNT=/path/to/service-account.json
# Or use GOOGLE_APPLICATION_CREDENTIALS for ADC
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ============================================
# GOOGLE DRIVE INTEGRATION (Optional)
# ============================================
GOOGLE_DRIVE_CLIENT_ID=your-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:5000/api/drive/callback

# ============================================
# DAILY.CO VIDEO CONFERENCING (Optional)
# ============================================
DAILY_API_KEY=your-daily-api-key
DAILY_DOMAIN=your-domain.daily.co

# ============================================
# SESSION & SECURITY CONFIGURATION
# ============================================
# Allow public registration (otherwise only the first user can register)
ALLOW_PUBLIC_REGISTRATION=false

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-session-secret-min-32-characters

# Cookie domain (for production)
# COOKIE_DOMAIN=.yourdomain.com

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Upload directory (relative to project root)
UPLOAD_DIR=uploads

# For Google Cloud Storage (production)
# GCS_BUCKET_NAME=your-bucket-name

# ============================================
# RATE LIMITING
# ============================================
# API rate limit (requests per 15 minutes)
API_RATE_LIMIT=500

# Auth rate limit (requests per 15 minutes)
AUTH_RATE_LIMIT=10

# ============================================
# LOGGING
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable structured logging for Cloud Logging
STRUCTURED_LOGGING=false
